<div class="container">
  <div class="row d-column justify-content-center my-5">
    <div class="col-sm-12 col-md-6 col-lg-6 card p-4 bg-light">
      <h5 class="text-center text-senodary"><i class="fas fa-fw fa-users"></i> Sign up</h5>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name),  data: { turbo: false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control p-2 mt-2", autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control mt-2", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control p-2 mt-2", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation,  class: "form-control p-2 mt-2", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-md btn-secondary p-2 mt-2 form-control" %>
  </div>
<% end %>
  <div class="d-flex justify-content-between flex-wrap">
    <%= render "devise/shared/links" %>
  </div>
    </div>
  </div>
</div>
